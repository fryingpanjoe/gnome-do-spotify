<Addin
	id="Spotify"
	namespace="Do"
	version="1.0"
	name="Spotify"
	description="Control the Spotify client."
	author="Per Lindstrand"
	category="Community"
	defaultEnabled="false"
    url="http://www.spotify.com"
	>

	<Runtime>
		<Import assembly="Spotify.dll"/>
	</Runtime>

	<Localizer type="Gettext" catalog="gnome-do-plugins" location="@expanded_datadir@/locale" />

	<Dependencies>
		<Addin id="Universe" version="1.0" />
	</Dependencies>

	<!-- Extensions included in this assembly -->
	<!-- Sources -->
	<Extension path = "/Do/ItemSource">
		<ItemSource type="Do.Addins.Spotify.SpItemSource" />
	</Extension>
	<Extension path="/Do/Action">
		<Action type="Spotify.SpAction_Next" />
		<Action type="Spotify.SpAction_PlayPause" />
	</Extension>
</Addin>
